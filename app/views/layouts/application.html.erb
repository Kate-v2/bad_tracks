<!DOCTYPE html>
<html>
  <head>
    <title>BadTracks</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav>
      Cart: <%= @cart.total_count %>
    </nav>


    <% flash.each do |type, message| %>
      <%= content_tag :div, message, class: type %>
      <!-- Type is the key, message is the string -->
      <!-- Here we make a div, display the message, and give it a class of [:this_stuff]  -->
      <!-- [:error] = red, [:success] = green, [:notice] = yellow -->
    <% end %>


    <%= yield %>
  </body>
</html>
